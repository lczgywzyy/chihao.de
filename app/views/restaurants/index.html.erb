<h1>Listing restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Recipe</th>
      <th>Image url</th>
      <th>Phone1</th>
      <th>Phone2</th>
      <th>Phone3</th>
      <th>Phone4</th>
      <th>Phone5</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.recipe_id %></td>
        <td><%= restaurant.image_url %></td>
        <td><%= restaurant.phone1 %></td>
        <td><%= restaurant.phone2 %></td>
        <td><%= restaurant.phone3 %></td>
        <td><%= restaurant.phone4 %></td>
        <td><%= restaurant.phone5 %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

