<div id="user-form" class='col-sm-4 col-sm-offset-4'>
	<%= form_for @restaurant, :html => {:multipart => true} do |f| %>
	 <%= render "shared/error_messages", object: f.object %>

	  <div class="form-group">
	    <%= f.label :餐厅名称 %><br>
	    <%= f.text_field :name, class:'form-control' %>
	  </div>
	  <div class="form-group">
	    <%= f.label :餐厅简介 %><br>
	    <%= f.text_area :description, class:'form-control' %>
	  </div>
	  
	  <div class="form-group">
	    <%= f.label :餐厅照片%><br>
	    <%= f.file_field :avatar %>
	  </div>
	  <div class="form-group">
	    <%= f.label :电话 %><br>
	    <%= f.text_field :phone1, class:'form-control' %>
	  </div>
	  <div class="form-group">
	    <%= f.label :手机 %><br>
	    <%= f.text_field :phone2, class:'form-control' %>
	  </div>
	  <div class="form-group" id="address-select,=">
	    <%= f.label :地址 %><br>
	    <span id="province"><%= f.select :province_id, provinces, id:'province' %></span>
			<span id="city"></span>
			<span id="county"></span>
			<%= f.text_field :address, class:'form-control'  %>
			
	  </div>
	  <div class="form-group">
	    <%= f.label :其他电话 %><br>
	    <%= f.text_field :phone3, class:'form-control' %>
	  </div>
	  <div class="form-group">
	    <%= f.label :其他电话 %><br>
	    <%= f.text_field :phone4, class:'form-control' %>
	  </div>
	  <div class="form-group">
	    <%= f.label :其他电话 %><br>
	    <%= f.text_field :phone5, class:'form-control' %>
	  </div>
		<%= f.hidden_field :user_id, value: current_user.id.to_s %>
	  <div class="form-group">
			<%= f.submit "创建餐厅", class:'btn btn-lg btn-primary' %>
		</div>

	<% end %>
</div>