<div id="user-form" class='col-sm-4 col-sm-offset-4'>
<%= form_for @recipe, :html => {:multipart => true} do |f| %>
  <%= render 'shared/error_messages', object: @recipe %>

  <div class="form-group">
    <%= f.label :菜名 %><br>
    <%= f.text_field :name, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :价格 %><br>
    <%= f.text_field :price, class:'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.label :详细描述 %><br>
    <%= f.text_area :description, class:'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.label :饭店名称 %>
		
		<%= f.text_field :restaurant_id %>

  </div>
  <div class="form-group">
    <%= f.label :上传图片 %><br>
	
    <p><%= f.file_field :avatar %></p>

		
  </div>
  <div class="form-group">
		<%= f.submit "创建菜单",class:'btn btn-lg btn-primary' %>
	</div>
<% end %>
</div>