

<div class="recipe">


<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @recipe.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @recipe.description %>
</p>

<p>
  <strong>Restaurant:</strong>
  <%= @recipe.restaurant_id %>
</p>

<p>
  <%= image_tag @recipe.avatar.url(:thumb) if @recipe.avatar? %>
</p>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
<%= link_to 'new', new_recipe_path %>
</div>